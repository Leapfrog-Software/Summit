<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:id="@+id/rootLayout"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#fff">
            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/back_blue"
                android:scaleType="fitCenter"
                android:background="#0000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="プロフィール編集"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/mainBlue"
                android:gravity="center"/>
        </FrameLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- 顔画像 -->
                <FrameLayout
                    android:layout_width="120dp"
                    android:layout_height="148dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="48dp">
                    <ImageView
                        android:id="@+id/faceImageView"
                        android:layout_width="120dp"
                        android:layout_height="120dp" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:orientation="horizontal"
                        android:background="@drawable/shape_setting_profile_faceedit"
                        android:layout_gravity="bottom|center_horizontal">
                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/setting_profile_camera"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="編集する"
                            android:textSize="10dp"
                            android:textColor="@color/basicBlack"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="10dp"/>
                    </LinearLayout>
                    <Button
                        android:id="@+id/faceEditButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#0000"/>
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="自己紹介"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="#4E5665"
                    android:layout_marginTop="70dp"
                    android:layout_marginLeft="16dp"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:id="@+id/messageTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="釣りと将棋が好きです。釣りと将棋が好きです。釣りと将棋が好きです。釣りと将棋が好きです。釣りと将棋が好きです。釣りと将棋が好きです。釣りと将棋が好きです。釣りと将棋が好きです。"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:textColor="@color/basicBlack"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="44dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/setting_arrow_right"
                        android:scaleType="fitCenter"
                        android:background="#0000"/>
                    <Button
                        android:id="@+id/messageButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#0000"/>
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="基本情報"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="#4E5665"
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="16dp"/>

                <!-- 氏名 -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="#fff"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="氏名"
                        android:textSize="14dp"
                        android:textColor="@color/basicBlack"
                        android:layout_marginLeft="16dp"/>
                    <TextView
                        android:id="@+id/nameTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:text="山田太郎"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:textColor="@color/mainBlue"
                        android:layout_marginLeft="100dp"
                        android:layout_marginRight="44dp"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/setting_arrow_right"
                        android:layout_marginRight="16dp"
                        android:layout_gravity="center_vertical|right"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EFEFEF"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"/>
                    <Button
                        android:id="@+id/nameButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#0000"/>
                </FrameLayout>

                <!-- 氏名(かな) -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="#fff">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="氏名(かな)"
                        android:textSize="14dp"
                        android:textColor="@color/basicBlack"
                        android:layout_marginLeft="16dp"/>
                    <TextView
                        android:id="@+id/kanaTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:text="やまだたろう"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:textColor="@color/mainBlue"
                        android:layout_marginLeft="100dp"
                        android:layout_marginRight="44dp"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/setting_arrow_right"
                        android:layout_marginRight="16dp"
                        android:layout_gravity="center_vertical|right"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EFEFEF"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"/>
                    <Button
                        android:id="@+id/kanaButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#0000"/>
                </FrameLayout>

                <!-- 年代 -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="#fff">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="年代"
                        android:textSize="14dp"
                        android:textColor="@color/basicBlack"
                        android:layout_marginLeft="16dp"/>
                    <TextView
                        android:id="@+id/ageTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:text="20代"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:textColor="@color/mainBlue"
                        android:layout_marginLeft="100dp"
                        android:layout_marginRight="44dp"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/setting_arrow_right"
                        android:layout_marginRight="16dp"
                        android:layout_gravity="center_vertical|right"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EFEFEF"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"/>
                    <Button
                        android:id="@+id/ageButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#0000"/>
                </FrameLayout>

                <!-- 性別 -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="#fff">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="性別"
                        android:textSize="14dp"
                        android:textColor="@color/basicBlack"
                        android:layout_marginLeft="16dp"/>
                    <TextView
                        android:id="@+id/genderTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:text="男性"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:textColor="@color/mainBlue"
                        android:layout_marginLeft="100dp"
                        android:layout_marginRight="44dp"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/setting_arrow_right"
                        android:layout_marginRight="16dp"
                        android:layout_gravity="center_vertical|right"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EFEFEF"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"/>
                    <Button
                        android:id="@+id/genderButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#0000"/>
                </FrameLayout>

                <!-- 会社・組織名 -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="#fff">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="会社・組織名"
                        android:textSize="14dp"
                        android:textColor="@color/basicBlack"
                        android:layout_marginLeft="16dp"/>
                    <TextView
                        android:id="@+id/companyTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:text="株式会社ABC"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:textColor="@color/mainBlue"
                        android:layout_marginLeft="100dp"
                        android:layout_marginRight="44dp"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/setting_arrow_right"
                        android:layout_marginRight="16dp"
                        android:layout_gravity="center_vertical|right"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EFEFEF"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"/>
                    <Button
                        android:id="@+id/companyButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#0000"/>
                </FrameLayout>

                <!-- 役職・職種 -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="#fff"
                    android:layout_marginBottom="48dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="役職・職種"
                        android:textSize="14dp"
                        android:textColor="@color/basicBlack"
                        android:layout_marginLeft="16dp"/>
                    <TextView
                        android:id="@+id/positionTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:text="役職・職種"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:textColor="@color/mainBlue"
                        android:layout_marginLeft="100dp"
                        android:layout_marginRight="44dp"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/setting_arrow_right"
                        android:layout_marginRight="16dp"
                        android:layout_gravity="center_vertical|right"/>
                    <Button
                        android:id="@+id/positionButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#0000"/>
                </FrameLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>
