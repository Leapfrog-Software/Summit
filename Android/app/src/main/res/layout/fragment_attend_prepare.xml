<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:id="@+id/rootLayout">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/scheduleImageView"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="fitCenter"/>
            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="【異業種交流会】"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="@color/basicBlack"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="へようこそ！"
                android:textSize="16dp"
                android:textColor="@color/basicBlack"
                android:layout_marginTop="12dp"
                android:layout_gravity="center_horizontal"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="48dp">
                <TextView
                    android:id="@+id/remainTimeTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="開始まであと"
                    android:textSize="14dp"
                    android:textColor="@color/basicBlack"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="4dp"/>
                <TextView
                    android:id="@+id/remainTimeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="35:00"
                    android:textSize="32dp"
                    android:textStyle="bold"
                    android:textColor="@color/mainBlue"
                    android:layout_marginLeft="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="48dp"
                android:layout_marginLeft="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="参加予定"
                    android:textSize="12dp"
                    android:textColor="@color/basicBlack" />
                <TextView
                    android:id="@+id/memberCountTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(10名)"
                    android:textSize="12dp"
                    android:textColor="@color/basicBlack"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:scrollbars="none"
                android:layout_marginTop="10dp"
                android:overScrollMode="never">
                <LinearLayout
                    android:id="@+id/memberLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" />
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/schedule_detail_date"/>
                <TextView
                    android:id="@+id/dateTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5月1日 11:00〜"
                    android:textSize="14dp"
                    android:textColor="#ABABAB"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="16dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/schedule_detail_provider"/>
                <TextView
                    android:id="@+id/providerTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Summit!運営"
                    android:textSize="14dp"
                    android:textColor="#ABABAB"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#EFEFEF"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="詳細"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="14dp"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="16dp"/>

            <TextView
                android:id="@+id/descriptionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="詳細詳細詳細詳細詳細詳細詳細詳細詳細詳細詳細詳細詳細詳細詳細"
                android:textColor="@color/basicBlack"
                android:textSize="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="48dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- TODO iOSでバグ -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/back_blue"
        android:scaleType="fitCenter"
        android:background="#0000"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>

    <View
        android:id="@+id/blackView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        android:visibility="invisible"/>

</FrameLayout>
