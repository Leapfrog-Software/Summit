<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/shape_chat_base_layout">

        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="#0000">
            <ImageView
                android:id="@+id/member1ImageView"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginLeft="32dp"
                android:layout_gravity="center_vertical"/>
            <ImageView
                android:id="@+id/member2ImageView"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center_vertical"/>
            <ImageView
                android:id="@+id/member3ImageView"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center_vertical"/>
            <ImageView
                android:id="@+id/member4ImageView"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center_vertical"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"/>
            <FrameLayout
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_gravity="right">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/memberCountTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13"
                        android:textSize="14dp"
                        android:textColor="#ABABAB"
                        android:layout_gravity="center_vertical"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="4dp"
                        android:src="@drawable/setting_arrow_right"
                        android:scaleType="fitCenter"
                        android:layout_gravity="right|center_vertical"/>
                </LinearLayout>
                <Button
                    android:id="@+id/memberViewButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#0000"/>

            </FrameLayout>
        </LinearLayout>

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#fff"
            android:divider="@null"
            android:scrollbars="none"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/chatEditText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/shape_chat_input_layout" />

            <Button
                android:id="@+id/sendButton"
                android:layout_width="44dp"
                android:layout_height="32dp"
                android:text="送信"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="16dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/shape_chat_send_button"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
