<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootLayout">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#5000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_dialog_background"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_gravity="center_vertical">

        <View
            android:layout_width="1dp"
            android:layout_height="32dp"/>
        <ImageView
            android:id="@+id/successImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/dialog_success"
            android:layout_gravity="center_horizontal"/>
        <ImageView
            android:id="@+id/errorImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/dialog_error"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="タイトル"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="@color/basicBlack"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/messageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="メッセージ"
            android:textSize="14dp"
            android:textColor="@color/basicBlack"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"/>

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">
            <FrameLayout
                android:id="@+id/successButtonLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/shape_dialog_success_button">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="OK"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:textAlignment="center"/>
                <Button
                    android:id="@+id/successOkButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#0000"/>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/errorButtonLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/shape_dialog_error_button">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="OK"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:textAlignment="center"/>
                <Button
                    android:id="@+id/errorOkButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#0000"/>
            </FrameLayout>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
